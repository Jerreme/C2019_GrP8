@page
@model StrayPetOnline.Pages.ReturnPetModel
@{
    ViewData["Title"] = "Return A Pet";
}

@*<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
</div>*@

<div class="px-4 py-5 my-5 text-center">
    <h1 class="display-1 fw-bold">@ViewData["Title"]</h1>
</div>

<div class="container my-5">
    <div class="row p-4 pb-0 pe-lg-0 pt-lg-5 align-items-center rounded-3 border shadow-lg">
        <div class="col-lg-7 p-3 p-lg-5 pt-lg-3">
            <h1 class="display-4 fw-bold lh-1">Fill-up Application Form to Return the Pet</h1>
            <p class="lead">If you ever feel you don't need the pet that you recently adopted, don't worry,, StrayPetOnline allows you to return the pet just by filling-up the form.</p>
            <div class="d-grid gap-2 d-md-flex justify-content-md-start mb-4 mb-lg-3">
                <button type="button" class="btn btn-primary btn-lg px-4 me-md-2 fw-bold">Apply to Return</button>
                @*<button type="button" class="btn btn-outline-secondary btn-lg px-4">Default</button>*@
            </div>
        </div>
        <div class="col-lg-4 offset-lg-1 p-0 overflow-hidden shadow-lg">
            <img class="rounded-lg-3" src="Images\Dogs and Cats\Cat-Dog-Wishlist.jpg" alt="" width="720">
        </div>
    </div>
</div>
